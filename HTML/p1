        <!-- Event Registration Form -->
        <section id="registration">
            <h2>Event Registration</h2>
            <div class="form-container">
                <form id="registrationForm" onsubmit="handleFormSubmit(event)">
                    <div class="form-group">
                        <label for="name">Full Name:</label>
                        <input type="text" id="name" name="name" placeholder="Enter your full name" required autofocus>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email Address:</label>
                        <input type="email" id="email" name="email" placeholder="your.email@example.com" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Phone Number:</label>
                        <input type="tel" id="phone" name="phone" placeholder="(555) 123-4567" onblur="validatePhone(this)">
                    </div>
                    
                    <div class="form-group">
                        <label for="eventDate">Preferred Event Date:</label>
                        <input type="date" id="eventDate" name="eventDate" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="eventType">Event Type:</label>
                        <select id="eventType" name="eventType" onchange="displayEventFee(this)" required>
                            <option value="">Select an event type</option>
                            <option value="workshop" data-fee="25">Workshop ($25)</option>
                            <option value="festival" data-fee="15">Festival ($15)</option>
                            <option value="sports" data-fee="20">Sports Event ($20)</option>
                            <option value="cultural" data-fee="30">Cultural Event ($30)</option>
                            <option value="educational" data-fee="35">Educational Seminar ($35)</option>
                        </select>
                        <div id="eventFee" style="margin-top: 0.5rem; font-weight: bold; color: #667eea;"></div>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Additional Message:</label>
                        <textarea id="message" name="message" rows="4" placeholder="Any special requirements or questions?" onkeyup="countCharacters(this)"></textarea>
                        <div class="char-counter" id="charCounter">0 / 500 characters</div>
                    </div>
                    
                    <button type="submit" onclick="showConfirmation(event)">Register for Event</button>
                    
                    <output id="output"></output>
                </form>
                
                <div class="mt-2 text-center">
                    <button onclick="findNearbyEvents()" style="background: #4caf50;">📍 Find Nearby Events</button>
                    <button onclick="clearPreferences()" style="background: #f44336; margin-left: 1rem;">Clear Preferences</button>
                </div>
