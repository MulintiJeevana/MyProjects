    <script>
        // Load saved preferences on page load
        window.onload = function() {
            const savedEventType = localStorage.getItem('preferredEventType');
            if (savedEventType) {
                document.getElementById('eventType').value = savedEventType;
                displayEventFee(document.getElementById('eventType'));
            }
            console.log('Page loaded successfully');
        };

        // Warn before leaving unfinished form
        let formModified = false;
        document.getElementById('registrationForm').addEventListener('input', function() {
            formModified = true;
        });

        window.onbeforeunload = function(e) {
            if (formModified) {
                const message = 'You have unsaved changes. Are you sure you want to leave?';
                e.returnValue = message;
                return message;
            }
        };

        // Phone validation
        function validatePhone(input) {
            const phoneRegex = /^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$/;
            if (input.value && !phoneRegex.test(input.value)) {
                input.style.borderColor = '#f44336';
                alert('Please enter a valid phone number format: (555) 123-4567');
            } else {
                input.style.borderColor = '#4caf50';
            }
        }

        // Display event fee
        function displayEventFee(select) {
            const selectedOption = select.options[select.selectedIndex];
            const fee = selectedOption.getAttribute('data-fee');
            const feeDiv = document.getElementById('eventFee');
            
            if (fee) {
                feeDiv.textContent = `Registration Fee: $${fee}`;
                // Save preference
                localStorage.setItem('preferredEventType', select.value);
            } else {
                feeDiv.textContent = '';
            }
        }

        // Form submission
        function handleFormSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            
            let confirmationMessage = 'Registration Confirmed!\n\nDetails:\n';
            for (let [key, value] of formData.entries()) {
                if (value) {
                    confirmationMessage += `${key}: ${value}\n`;
                }
            }
            
            document.getElementById('output').innerHTML = confirmationMessage.replace(/\n/g, '<br>');
            document.getElementById('output').style.display = 'block';
            
            formModified = false;
            console.log('Form submitted successfully');
        }

        // Confirmation dialog
        function showConfirmation(event) {
            if (!confirm('Are you sure you want to submit this registration?')) {
                event.preventDefault();
            }
        }

        // Character counting
        function countCharacters(textarea) {
            const current = textarea.value.length;
            const max = 500;
            const counter = document.getElementById('charCounter');
            counter.textContent = `${current} / ${max} characters`;
            
            if (current > max) {
                counter.style.color = '#f44336';
                textarea.value = textarea.value.substring(0, max);
            } else {
                counter.style.color = '#666';
            }
        }

        function countFeedbackCharacters(textarea) {
            const current = textarea.value.length;
            const max = 1000;
            const counter = document.getElementById('feedbackCharCounter');
            counter.textContent = `${current} / ${max} characters`;
            
            if (current > max) {
                counter.style.color = '#f44336';
                textarea.value = textarea.value.substring(0, max);
            } else {
                counter.style.color = '#666';
            }
        }

        // Image enlargement
        function enlargeImage(img) {
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImage');
            modal.style.display = 'block';
            modalImg.src = img.src;
            modalImg.alt = img.alt;
        }

        function closeModal() {
            document.getElementById('imageModal').style.display = 'none';
        }

        // Video ready event
        function videoReady() {
            document.getElementById('videoStatus').textContent = '✅ Video ready to play!';
            console.log('Video is ready to play');
        }

        // Geolocation
        function findNearbyEvents() {
            const resultDiv = document.getElementById('locationResult');
            
            if (!navigator.geolocation) {
                resultDiv.innerHTML = '<p style="color: #f44336;">❌ Geolocation is not supported by this browser.</p>';
                return;
            }

            resultDiv.innerHTML = '<p>📍 Getting your location...</p>';

            const options = {
                enableHighAccuracy: true,
                timeout: 10000,
                maximumAge: 60000
            };

            navigator.geolocation.getCurrentPosition(
                function(position) {
                    const lat = position.coords.latitude.toFixed(6);
                    const lon = position.coords.longitude.toFixed(6);
                    const accuracy = position.coords.accuracy;
                    
                    resultDiv.innerHTML = `
                        <div style="background: #e8f5e8; padding: 1rem; border-radius: 8px; border: 2px solid #4caf50;">
                            <h4>📍 Your Location Found!</h4>
                            <p><strong>Coordinates:</strong> ${lat}, ${lon}</p>
                            <p><strong>Accuracy:</strong> ±${accuracy} meters</p>
                            <p><strong>Nearby Events:</strong></p>
                            <ul>
                                <li>🎪 Community Festival - 0.5 miles away</li>
                                <li>🏃‍♂️ 5K Fun Run - 1.2 miles away</li>
                                <li>🎨 Art Workshop - 0.8 miles away</li>
                            </ul>
                        </div>
                    `;
                    console.log(`Location found: ${lat}, ${lon}`);
                },
                function(error) {
                    let errorMessage = '';
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage = '❌ Location access denied by user.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage = '❌ Location information is unavailable.';
                            break;
                        case error.TIMEOUT:
                            errorMessage = '❌ Location request timed out.';
                            break;
                        default:
                            errorMessage = '❌ An unknown error occurred.';
                            break;
                    }
                    resultDiv.innerHTML = `<p style="color: #f44336;">${errorMessage}</p>`;
                    console.error('Geolocation error:', error);
                },
                options
            );
        }

        // Clear preferences
        function clearPreferences() {
            localStorage.clear();
            sessionStorage.clear();
            document.getElementById('eventType').value = '';
            document.getElementById('eventFee').textContent = '';
            alert('All preferences have been cleared!');
            console.log('Preferences cleared');
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('imageModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        };

        // Add some debugging logs
        console.log('Community Event Portal initialized');
        console.log('All event handlers attached successfully');
    </script>
</body>
</html>
